<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="3dp" android:top="3dp">
                <shape>
                    <corners android:radius="9dp" />
                    <solid android:color="#434141" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#585656" android:startColor="#434141" />
                    <stroke android:width="1dp" android:color="#585656" />
                    <corners android:radius="9dp" />
                    <padding android:bottom="4dp" android:left="4dp"
                        android:right="4dp" android:top="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>